{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@store/*": ["app/store/*"],
      "@services/*": ["app/services/*"],
      "@router/*": ["app/router/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["app/components/*"],
      "@components": ["app/components/index.ts"],
      "@screens/*": ["app/screens/*"],
      "@core/*": ["app/core/*"],
      "@theme/*": ["app/theme/*"],
      "@utils": ["app/utils/index.ts"],
      "@constants/*": ["app/constants/*"]
    }
  }
}
